
<!-- map will have pins with current games going on -->
<div id="map"> </div>


<!-- LOGIN FORM (HIDDEN) BEING USED WITH JAVASCRIPT! -->
<div class="loginform_container">

  <div class = "loginform">

  <h1 id="logintext">Log In</h1>

  <%= form_for :session, url: sessions_path do |f| %>

    <div class='field'>
      <%= f.label :email %>
      <br>
      <%= f.email_field :email%>
    </div>
    <br>
    <div class='field'>
      <%= f.label :password %>
      <br>
      <%= f.password_field :password %>
    </div>
    <br>
    <br>
    <%= f.submit 'Login' %>

  <% end %>

  <button id="exit-form">x</button>

  </div>
</div>
