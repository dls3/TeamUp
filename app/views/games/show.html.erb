
<div class = "index_container" id = "show_game_image">
</div>

<div class = "dash_banner">
     <div class = "dash_header">MY GAMES</div>
  </div>
<center class = "showgame">
<div class = "box">

<span class = "name" > <%= @game.event_name %> </span> <br>

<div class = "info">

<p> <span id="gamed"> Description:  <%= @game.description %> </span> </p>
<p> Date: <%= @game.date %> </p>
<p> Time: <%= @game.time %> </p>
<p> Skill:  <%= @game.skill %> </p>
<p> Sport: <%= @game.sport %> </p>

<!-- game_rsvp_path(game_id:@game.id) %>  -->
<br />
<br />
<div class = "div_links">
<% if current_user %>
  <div id="join_link"><%= link_to "Join", users_join_games_path(game_id: @game.id, user_id: current_user.id) %>  </div>
<% else %>
  <%= link_to "Sign Up", new_user_path %>
<% end %>
<% if current_user.id == @game.user_id%>
  <div id="edit_link"><%= link_to "Edit Game", edit_game_path(@game) %>  </div>
  <div id="delete_link"><%=link_to("Delete", game_path(@game.id), method: :delete, data: {confirm: "Are you sure you want to delete?"}) %>  </div>
<% end %>
</div>

<br />
<br />
</div>


</div>
</div>
</center>
