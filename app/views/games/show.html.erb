<center class = "showgame">

<div class = "box">

<span class = "name" > <%= @game.event_name %> </span> <br>

<div class = "info">

<p> <span id="gamed"> Description:  <%= @game.description %> </span> </p>
<p> Date: <%= @game.date %> </p>
<p> Time: <%= @game.time %> </p>
<p> Skill:  <%= @game.skill %> </p>
<p> Sport: <%= @game.sport %> </p>

<!-- game_rsvp_path(game_id:@game.id) %>  -->
<br />
<br />
<% if current_user %>
<div class = "button">   <%= link_to "Join", users_join_games_path(game_id: @game.id, user_id: current_user.id) %>  </div>
<% else %>
  <div class = "button"> <%= link_to "Sign Up", new_user_path %> </div>
<% end %>
<% if current_user.id == @game.user_id%>
  <div class = "button"> <%= link_to "Edit Game", edit_game_path(@game) %> </div>  <br /><br />
  <div class = "button"> <%=link_to("Delete", game_path(@game.id), method: :delete, data: {confirm: "Are you sure you want to delete?"}) %> </div> <br /><br />
<% end %>


</div>

<div class = "button"> <%= link_to("Back to Home", root_url, class:'back_home') %> </div>

</div>
</center>
