<span class = "name" > <%= @game.event_name %> </span> <br>

<div class = "info">

<p> Description:  <%= @game.description %> </p>
<p> Date: <%= @game.date %> </p>
<p> Time: <%= @game.time %> </p>
<p> Skill:  <%= @game.skill %> </p>
<p> Sport: <%= @game.sport %> </p>

<!-- game_rsvp_path(game_id:@game.id) %>  -->

<% if current_user %>
  <%= link_to "Join", users_join_games_path(game_id: @game.id, user_id: current_user.id) %> 
<% else %>
  <%= link_to "Sign Up", new_user_path %>
<% end %>

<% if current_user.id == @game.user_id%>
  <%= link_to "Edit Game", edit_game_path(@game) %>
<% end %>


</div>

