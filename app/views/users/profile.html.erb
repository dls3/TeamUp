<div class = "index_container" id = "profile_image">
</div>

<center>
    <div class = "dash_banner">
       <div class = "dash_header">MY PROFILE</div>
    </div>

<div class = "user_info">
  <h3 class = "user-name"> <%= "Hello #{@user.name}"%> </h3>
  <p class = "email">EMAIL: <%= @user.email %></p>

<% if current_user %>

<div class="your-game">
    <div class="profile_links">
        <% if current_user.games.any? %>
          <h2 class="link2"><%= link_to "My Created Games", users_own_games_path %></h2>
        <% end %>

      </div>
</div>
<% end %>

<% if current_user %>
<div class ="your-game">
  <div class = "profile_links">
    <h2 class "link1">
      <% @games.each do |game| %>
        <% game_id = game.id %>
      <% end %>
      <div class = "link2"><%= link_to "Joined Games", rsvp_index_path %></div>
<% end %>
</div>
</div>
</div>
</center>
